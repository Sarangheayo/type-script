{
  "include": ["src"], // 컴파일 할 타입스크립트 파일의 범위, 위치를 알려주는 옵션

  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // es6 수준의 호환 가능한 코드로 변환
    "target": "es2020", 
    // 생성되는 js파일이 어떤 모듈 시스템을 사용할 지 설정, import, or export 
    "module": "esnext",
    // 컴파일이 완료된 js 파일들이 저장될 출력 디렉토리 지정 설정
    "outDir": "./dist",
    // 엄격한 타입 검사 설정 - false로 주면 js랑 다를게 없음. 계속 깐깐하게 보고해!
    "strict": true,
    // 각 파일을 독립된 모듈로 인식하는 방식 설정
    //  "force" : 모든 파일에 export, import가 없어도 자동으로 개별 모듈로 인식해서 전역변수의 충돌 방지
    "moduleDetection": "force",
    
    /* 디버깅, 라이브러리 배포용 설정 */
    // js파일과 ts 소스코드를 연결시켜주는 맵을 생성 여부 설정
    "sourceMap": true, // 배포할 때는 false로 설정
    // 컴파일 시, .d.ts(타입 정의만 담긴 파일)를 함께 생성 여부 설정 
    "declaration": false, // 보통 외부 라이브러리 만들 때 true로 설정. 
    // .d.ts 파일에 대한 소스맵 생성 여부 설정, `정의로 이동` 시 실제 .ts 파일로 이동
    "declarationMap": false,
    
    /* 더 엄격한 타입 검사 (에러 방지) */
    // 객체나 배열의 인덱스로 접근할 때, `undefined`가 섞여서 나올 가능성을 강제로 체크
    "noUncheckedIndexedAccess": true,
    // 선택적 속성(?)에 명시적으로 'undefined' 를 할당 불가 여부 설정 , true = 불가, false = 가능
    "exactOptionalPropertyTypes": true,
    // noImplicitAny = any를 사용할 수 없음 설정
    // 암시적인 any 타입만 막음
    "noImplicitAny": true,
    
    /* 최신 및 권장 설정 */
    // 설치된 라이브러리(.d.ts)들의 내부 타입에러는 무시하고, 내 코드의 타입에러만 체크
    "skipLibCheck": true,
    // import문을 최적화 할 때, 타입전용 import를 함부로 제거하지 않고 문법 그대로 유지 여부 설정
    "verbatimModuleSyntax": true,
    // 사이드 이펙트를 위한 import가 실제로 존재하는지 여부를 체크 설정
    "noUncheckedSideEffectImports": true,
    // 각 파일을 독립된 모듈로 컴파일 할 수 있는지 인식하는 방식 설정(Vite or Babel 같은 도구와의 호환성을 위해서 사용)
    "isolatedModules": true,
    // jsx 파일이 js 파일로 변환되는 방식 설정 (react version에 따라 변환하는 코드 작성 방법이 다름)
    "jsx": "react-jsx",

    // 

  }
}
